{
	"manifest_version": 3,
	"name": "Xinfer Crawler",
	"description": "Fetch pages for Xinfer.AI via your browser session â€” opens URLs in a tab using your network and cookies.",
	"version": "2.0.0",
	"permissions": ["activeTab", "tabs", "scripting", "storage"],
	"host_permissions": ["<all_urls>"],
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": [
				"https://xinfer.ai/*",
				"https://*.xinfer.ai/*",
				"https://localhost:3000/*",
				"http://localhost:3000/*"
			],
			"js": ["content.js"],
			"run_at": "document_idle"
		}
	],
	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	}
}
